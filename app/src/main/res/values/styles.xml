<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Dialog.DimmedBackground" parent="AppTheme.NoActionBar">

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Dialog.TransparentBackground" parent="AppTheme.Dialog.DimmedBackground">
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/appBarOverlayElementColor</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>
        <item name="tabSelectedTextColor">#FFF</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:drawableLeft">@drawable/alarm_dark</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="PropertyHeaderStyle">
        <item name="android:textColor">#434c69</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PropertyHeaderStyle.withMargin" parent="PropertyHeaderStyle">
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="HorizontalSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#40000000</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="HorizontalSeparator.NoVerticalMargin" parent="HorizontalSeparator">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="ListElementTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/titleTextColor</item>
    </style>

    <style name="AttributeDetailFieldName">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">sans-serif-normal</item>
        <item name="android:textColor">@color/titleTextColor</item>
    </style>


    <style name="SubTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#a0a0a0</item>

        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="SubTitleWithoutSeparatorAbove" parent="SubTitle">
        <item name="android:layout_marginTop">23dp</item>
    </style>

    <style name="BadgeText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/capsule_frame</item>

    </style>

    <style name="propertyElementStyle">

        <item name="android:paddingTop">@dimen/property_top_padding</item>
        <item name="android:paddingBottom">@dimen/property_bottom_padding</item>
    </style>

    <style name="ColorSelectionButtonStyle">
        <item name="android:layout_width">@dimen/color_selection_button_size</item>
        <item name="android:layout_height">@dimen/color_selection_button_size</item>
    </style>

    <style name="ShortTextInputStyle">
        <item name="android:background">@drawable/text_field_singleline</item>
        <item name="android:inputType">text|textShortMessage</item>
        <item name="android:ems">10</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:hint">@string/hint_short_text</item>
        <item name="android:textColorHint">#66000000</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/inputTextColor</item>
        <item name="android:typeface">serif</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lines">1</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>

    <style name="ShortTextFormStyle">
        <item name="android:background">@drawable/text_field_singleline</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textShortMessage</item>

        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>

        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="LongTextInputStyle">
        <item name="android:gravity">top</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">text|textMultiLine</item>
        <item name="android:ems">10</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:hint">@string/hint_long_text</item>
        <item name="android:textColorHint">#33000000</item>
        <item name="android:textColor">@color/inputTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:lineSpacingExtra">12dp</item>
        <item name="android:minLines">3</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>

    </style>

    <style name="whitePlusButtonStyle">
        <item name="android:background">@drawable/round_button_background</item>
        <item name="android:padding">14dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="srcCompat">@drawable/plus</item>
        <item name="android:tint">@color/buttonIconColorDark</item>
    </style>

    <style name="whiteMinusButtonStyle" parent="whitePlusButtonStyle">
        <item name="srcCompat">@drawable/minus</item>
    </style>

    <style name="whiteButtonLongStyle">
        <item name="android:background">@drawable/capsule_button_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="numberPropertyDigitViewStyle">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>

    <style name="textButtonTransparentLight">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/transparent_button_background</item>
    </style>

    <style name="SubTitleInverse" parent="SubTitle">
        <item name="android:textColor">#eeffffff</item>
    </style>

    <style name="flatGreenButtonStyle">
        <item name="android:background">@drawable/button_background_green</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_height">40dp</item>


    </style>

    <style name="expandedPanelButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height_normal</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#afffffff</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/transparent_button_background</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:minWidth">@dimen/button_height_normal</item>

    </style>

    <style name="mapViewOverlayButton">

        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:tint">@color/textColorMid</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/round_rectangle_button_for_overlay</item>

        <item name="android:scaleGravity">center</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="itemListAttributeName">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColorLight</item>
    </style>

    <style name="viewForItemListTextAppearance">
        <item name="android:textColor">@color/textColorMid</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:lineSpacingExtra">3dp</item>
    </style>

    <style name="longTextForItemListTextAppearance">
        <item name="android:textColor">@color/textColorMid</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:lineSpacingExtra">5dp</item>

    </style>

    <style name="tagTextAppearance">
        <item name="android:textColor">#efffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="listEmptyMessage">
        <item name="android:textColor">#ababab</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="durationPickerDigitViewStyle">
        <item name="android:textSize">@dimen/number_digit_size</item>
        <item name="android:textStyle">italic</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="durationPickerUnitViewStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:textColor">@color/textColorMid</item>
    </style>

    <style name="durationPickerKeyPadStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">@dimen/button_height_normal</item>
        <item name="android:background">@drawable/transparent_button_background</item>
        <item name="android:textColor">@color/buttonIconColorDark</item>
    </style>

    <style name="propertyMultilineHeaderStyle" parent="PropertyHeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="propertyGroupElement">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>

    </style>

    <style name="propertyGroupElement.NoHorizontalMargin" parent="propertyGroupElement">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>

    </style>


    <style name="propertyGroupSinglelineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="propertyGroupMultilineStyle" parent="propertyGroupSinglelineStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">18dp</item>

    </style>

    <style name="dayOfWeekSelectorLetterAppearance">
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
        <item name="android:textSize">27sp</item>
    </style>

    <style name="dayOfWeekSelectorLetterAppearance.Unselected" parent="dayOfWeekSelectorLetterAppearance">
        <item name="android:textColor">@color/textColorMid</item>
    </style>

    <style name="dayOfWeekSelectorLetterAppearance.Selected" parent="dayOfWeekSelectorLetterAppearance">
        <item name="android:textColor">#FFF</item>
        <item name="android:fontFamily">sans-serif-normal</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="checkboxTextStyle">
        <item name="android:textColor">@color/textColorMid</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="hourPickerHourStyle" parent="durationPickerDigitViewStyle">
        <item name="android:textStyle">normal</item>
    </style>


    <style name="hourPickerAmPmStyle" parent="durationPickerUnitViewStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColorMid</item>
    </style>

    <style name="roundButtonStyle">
        <item name="android:layout_width">@dimen/button_height_normal</item>
        <item name="android:layout_height">@dimen/button_height_normal</item>
        <item name="android:background">@drawable/round_button_background</item>
    </style>

    <style name="linearLayoutWithHorizontalDivider">
        <item name="android:divider">@drawable/horizontal_divider_light</item>
        <item name="android:dividerPadding">@dimen/activity_horizontal_margin</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="linearLayoutWithHorizontalDivider.Light.Nomargin" parent="linearLayoutWithHorizontalDivider">
        <item name="android:divider">@drawable/bottom_separator_thin</item>
        <item name="android:dividerPadding">0dp</item>
    </style>

    <style name="popupTitle">
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
        <item name="android:text">Select Type</item>
        <item name="android:textColor">@color/colorPointed</item>
        <item name="android:textSize">22.5sp</item>
    </style>

    <style name="numberInputViewUnitStyle">
        <item name="android:textSize">@dimen/number_unit_size</item>
        <item name="android:textColor">@color/textColorMid</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="audioPlayerTimeText">
        <item name="android:textSize">12sp</item>
        <item name="android:text">0:00</item>
        <item name="android:textColor">@color/textColorMid</item>
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>

    <style name="audioPlayerControlButton">
        <item name="android:layout_width">@dimen/button_height_small</item>
        <item name="android:layout_height">@dimen/button_height_small</item>
        <item name="android:background">@drawable/round_button_background</item>
        <item name="android:tint">@color/textColorLight</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>

    </style>

    <style name="tooltipTextAppearance">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tooltipStyle">
        <item name="ttlm_strokeWeight">0dp</item>
        <item name="ttlm_cornerRadius">2dp</item>
        <item name="ttlm_padding">20dp</item>
        <item name="android:textAppearance">@style/tooltipTextAppearance</item>
        <item name="ttlm_arrowRatio">1.4</item>
    </style>

    <style name="IntroTitleStyle" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FloatingActionButtonStyle">
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:layout_width">@dimen/button_height_normal</item>
        <item name="android:layout_height">@dimen/button_height_normal</item>
        <item name="srcCompat">@drawable/plus</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">center</item>
        <item name="rippleColor">@color/colorPointed.Light</item>
    </style>

    <style name="SidebarButtonStyle">
        <item name="android:padding">12dp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/buttonIconColorDark</item>
    </style>

    <style name="CameraViewOverlayButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_background_capsule_dark_transparent</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:minHeight">@dimen/button_height_normal</item>
        <item name="android:textColor">@color/textColorMid</item>
    </style>

    <style name="PointedColoredButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPointed</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="TransparentButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
