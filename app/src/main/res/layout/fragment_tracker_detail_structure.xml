<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ui_snackbar_container"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/ui_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/frontalBackground"
                android:orientation="vertical">

                <TextView
                    style="@style/SubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:text="@string/msg_basic_information" />

                <kr.ac.snu.hcil.omnitrack.ui.components.inputs.properties.ShortTextPropertyView
                    android:id="@+id/nameProperty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:text="@string/msg_name" />

                <kr.ac.snu.hcil.omnitrack.ui.components.inputs.properties.ColorPalettePropertyView
                    android:id="@+id/colorProperty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:text="@string/msg_color" />

                <View style="@style/HorizontalSeparator.NoVerticalMargin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@color/separator.Light"
                    />

                <kr.ac.snu.hcil.omnitrack.ui.components.inputs.properties.BooleanPropertyView
                    android:id="@+id/isOnShortcutProperty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:text="@string/msg_show_on_shortcut"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ui_group_attribute_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/expanded_view_inner_shadow"

                android:orientation="vertical">

                <TextView
                    style="@style/SubTitleWithoutSeparatorAbove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"

                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:text="@string/msg_attributes" />

                <kr.ac.snu.hcil.omnitrack.ui.components.common.FallbackRecyclerView
                    android:id="@+id/ui_attribute_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/expanded_view_inner_shadow_bottom"
                    android:paddingBottom="@dimen/activity_vertical_margin" />

                <TextView
                    android:id="@+id/ui_empty_list_message"
                    style="@style/listEmptyMessage"
                    android:layout_marginBottom="18dp"
                    android:text="@string/msg_field_empty"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ui_new_attribute_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorSecondary"
                android:orientation="vertical">

                <TextView
                    style="@style/SubTitleInverse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="0dp"
                    android:background="#10ffffff"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    android:paddingTop="12dp"
                    android:text="@string/msg_add_new_attribute" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ui_new_attribute_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="5" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/ui_snackbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
