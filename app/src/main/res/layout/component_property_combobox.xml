<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/title"
        style="@style/PropertyHeaderStyle"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="12dp"
        android:text="@string/msg_trigger_time_config_type" />

    <kr.ac.snu.hcil.omnitrack.ui.components.common.ExtendedSpinner
        android:id="@+id/value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/button_background_formlike"
        app:arrowTint="@color/buttonIconColorDark" />
</LinearLayout>