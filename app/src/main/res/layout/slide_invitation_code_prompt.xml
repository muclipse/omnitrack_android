<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundGravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        style="@style/IntroTitleStyle"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter an Access Code"
        android:textColor="@color/semiTransparentWhite" />


    <EditText
        android:id="@+id/ui_invitation_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/form_rounded_transparent"
        android:gravity="center"
        android:hint="Type in or paste here"
        android:inputType="textShortMessage"
        android:paddingBottom="12dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:textColor="#fff"
        android:textColorHint="#afffffff"
        android:textSize="20sp" />


</LinearLayout>