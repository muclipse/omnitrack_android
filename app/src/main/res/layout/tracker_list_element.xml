<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tracker_list_element_collapsed_height"
    android:background="@drawable/frontal_color_selectable_element_background">

    <View
        android:id="@+id/color_bar"
        android:layout_width="@dimen/tracker_list_color_bar_width"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="#ff8e38" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/color_bar"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ui_expanded_view"
            android:layout_marginStart="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name"
                    style="@style/ListElementTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Project"
                    android:textColor="#575757"
                    android:textSize="20sp" />

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/ui_invalid_icon"
                    android:layout_width="@dimen/button_height_small"
                    android:layout_height="@dimen/button_height_small"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:src="@drawable/error_dark"
                    android:tint="@color/colorRed.Light" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/tracker_list_information_bottom_padding">


                <TextView
                    android:id="@+id/ui_last_logging_time"
                    style="@style/trackerListInformationTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:minWidth="100dp"
                    android:paddingRight="@dimen/tracker_list_stat_paddingRight"
                    android:text="" />

                <TextView
                    android:id="@+id/ui_today_logging_count"
                    style="@style/trackerListInformationTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:minWidth="75dp"
                    android:paddingRight="@dimen/tracker_list_stat_paddingRight"
                    android:text="" />


                <TextView
                    android:id="@+id/ui_total_item_count"
                    style="@style/trackerListInformationTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:text="" />
            </LinearLayout>

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/ui_expand_button"
                android:layout_width="@dimen/tracker_list_expand_button_width"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:background="@drawable/left_separator"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/more_horiz_scarse"
                android:tint="@color/textColorMidLight" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ui_expanded_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorSecondary"
            android:orientation="horizontal"
            android:textAlignment="viewEnd"
            android:visibility="gone">

            <Button
                android:id="@+id/ui_button_edit"
                style="@style/expandedPanelButton"
                android:layout_weight="1"
                android:drawableStart="@drawable/pen"
                android:text="@string/msg_edit" />

            <Button
                android:id="@+id/ui_button_list"
                style="@style/expandedPanelButton"
                android:layout_weight="1"
                android:drawableStart="@drawable/list"
                android:text="@string/msg_data_list" />

            <Button
                android:id="@+id/ui_button_charts"
                style="@style/expandedPanelButton"
                android:layout_weight="1"
                android:drawableStart="@drawable/chart"
                android:text="@string/msg_charts" />

            <Button
                android:id="@+id/ui_button_remove"
                style="@style/expandedPanelButton"
                android:layout_weight="1"
                android:drawableStart="@drawable/ex"
                android:text="@string/msg_remove" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>