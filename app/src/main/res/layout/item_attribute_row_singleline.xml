<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:minHeight="@dimen/item_list_element_singleline_row_minHeight"
    android:paddingBottom="@dimen/item_list_element_vertical_padding"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/item_list_element_vertical_padding">

    <TextView
        android:id="@+id/ui_attribute_name"
        style="@style/itemListAttributeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:paddingTop="1dp"
        android:text="Attribute" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/ui_attribute_name">

        <TextView
            android:id="@+id/ui_value_view_replace"
            style="@style/viewForItemListTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="No Value" />
    </FrameLayout>
</RelativeLayout>