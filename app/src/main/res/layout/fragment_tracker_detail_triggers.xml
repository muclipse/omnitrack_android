<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <kr.ac.snu.hcil.omnitrack.ui.components.common.FallbackRecyclerView
        android:id="@+id/ui_trigger_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/ui_empty_list_message"
        style="@style/listEmptyMessage"
        android:text="@string/msg_trigger_empty" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ui_button_new_trigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:padding="4dp"
        android:src="@drawable/plus" />

</android.support.design.widget.CoordinatorLayout>