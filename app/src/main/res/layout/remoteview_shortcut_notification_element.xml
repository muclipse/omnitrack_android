<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/group"
        style="@style/shortcut_GroupStyle">
        <TextView android:id="@+id/ui_name"
            style="@style/shortcut_NameStyle"
            android:layout_marginBottom="6dp"
            android:text="Manual Sleep"
            />

        <FrameLayout
            android:id="@+id/ui_button_container"
            style="@style/shortcut_ButtonContainerStyle">

            <ImageView
                android:id="@+id/ui_background_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageButton
                android:id="@+id/ui_button_instant"
                style="@style/shortcut_ButtonStyle"/>
        </FrameLayout>
    </LinearLayout>