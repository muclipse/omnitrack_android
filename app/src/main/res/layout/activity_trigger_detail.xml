<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/frontalBackground"
    android:fitsSystemWindows="true"
    tools:context=".ui.pages.home.HomeActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay">


        <include layout="@layout/common_toolbar_with_buttons" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/rootScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/ui_control_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ViewStub
                android:id="@+id/ui_tracker_assign_panel_stub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout="@layout/layout_tracker_assign_panel" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>