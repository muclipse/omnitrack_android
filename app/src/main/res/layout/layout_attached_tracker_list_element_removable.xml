<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/button_height_small"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="16dp"
    android:background="@drawable/attached_tracker_list_element_background"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingBottom="6.5dp"
        android:paddingEnd="0dp"
        android:paddingStart="9dp"
        android:paddingTop="6.5dp"
        android:text="Water"
        android:textColor="@color/textColorMid"
        android:textSize="16sp" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/ui_button_remove"
        android:layout_width="@dimen/button_height_small"
        android:layout_height="match_parent"
        android:background="@drawable/transparent_button_background"
        android:tint="@color/buttonIconColorDark"
        app:srcCompat="@drawable/ex" />
</LinearLayout>